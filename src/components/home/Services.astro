---
const services = [
  {
    step: '01',
    name: 'Promoción de la unidad:',
    description:
      ' Fomentar la cooperación y la unidad entre las distintas congregaciones y denominaciones evangélicas de la región.',
  },
  {
    step: '02',
    name: 'Representación institucional:',
    description:
      ' Actuar como representante de las iglesias evangélicas ante las autoridades civiles y otras entidades religiosas, defendiendo los intereses y derechos de la comunidad evangélica.',
  },
  {
    step: '03',
    name: 'Desarrollo de proyectos comunitarios:',
    description:
      ' Impulsar iniciativas de servicio social y comunitario, tales como programas de asistencia social, educación, y apoyo a los más necesitados.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl"></h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
              <p class="text-sm">{service.step}</p>
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
