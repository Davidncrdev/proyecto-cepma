---
const team = [
{
    position: 'Presidente',
    name: 'Alfonso Medina - Presidente',
  },
  {
    position: 'Vicepresidente',
    name: 'Bernardo Serrano - Vicepresidente',
  },
  {
    position: 'Secretario ejecutivo',
    name: 'Reme Bernal - Secretario ejecutivo',
  },
  {
    position: 'Tesorero',
    name: 'Rafael Conde - Tesorero',
  },
  {
    position: 'Consejería Asuntos Sociales',
    name: 'Ignacio Minchón - Consejería Asuntos Sociales',
  },
  {
    position: 'Consejería Justicia',
    name: 'Kaleb Soares - Consejería Justicia',
  },
  {
    position: 'Consejería Educación y Cultura',
    name: 'Danilo Torre - Consejería Educación y Culturas',
  },
  {
    position: 'Consejería Comunicación',
    name: 'Juan Carlos Segovia - Consejería Comunicación',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="sm:space-8 space-y-12">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">La directiva</h2>
      <ul role="list" class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          team.map((item) => (
            <li class="border-primary-900/10 dark:border-primary-300/10 rounded-3xl border px-6 py-8">
              <div class="space-y-6">
                <img class="mx-auto h-auto w-16 rounded-full" />
                <div class="text-center">
                  <h3 class="text-lg font-medium">{item.name}</h3>
                  <p class="text-primary-950/70 dark:text-primary-200/70 text-base"></p>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
